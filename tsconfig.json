{
    "compileOnSave": false,
    "compilerOptions": {
      "downlevelIteration": true,
      "importHelpers": true,
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "target": "ES2022",
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2017",
        "dom"
      ],
      "module": "es2020",
      "baseUrl": "./",
      "useDefineForClassFields": false
    },
    "include": [
        "src/**/*",
        "node_modules/angular2-lightbox/*.component.ts",
        "node_modules/angular2-lightbox/*.service.ts",
        "node_modules/angular2-lightbox/*.module.ts"
    ]
}
